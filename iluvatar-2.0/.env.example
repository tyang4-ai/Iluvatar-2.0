# =============================================================================
# ILUVATAR 2.0 - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it contains secrets!

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_from_csv
AWS_SECRET_ACCESS_KEY=your_secret_from_csv
EC2_INSTANCE_TYPE=t3.xlarge
EC2_KEY_NAME=iluvatar-keypair
EC2_PUBLIC_IP=54.123.45.67

# -----------------------------------------------------------------------------
# Anthropic API
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxxxx
# Get from: https://console.anthropic.com/settings/keys

# -----------------------------------------------------------------------------
# Discord Bot
# -----------------------------------------------------------------------------
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_CHANNEL_ID=your_channel_id
ADMIN_CHANNEL_ID=your_admin_channel_id
# Get from: https://discord.com/developers/applications

# -----------------------------------------------------------------------------
# Admin Configuration (IMPORTANT!)
# -----------------------------------------------------------------------------
# Your Discord User ID - enables owner-only admin commands
# To get: Enable Developer Mode in Discord, right-click yourself, Copy ID
DISCORD_OWNER_ID=your_discord_user_id

# Additional admin user IDs (comma-separated, optional)
# These users can also run admin commands
ADMIN_USER_IDS=

# -----------------------------------------------------------------------------
# GitHub
# -----------------------------------------------------------------------------
GITHUB_TOKEN=ghp_xxxxx
GITHUB_USERNAME=your_github_username
# Get from: https://github.com/settings/tokens

# -----------------------------------------------------------------------------
# Deployment Platforms (Optional - configure later)
# -----------------------------------------------------------------------------
VERCEL_TOKEN=
RAILWAY_TOKEN=
NETLIFY_TOKEN=
RENDER_TOKEN=

# -----------------------------------------------------------------------------
# Database Passwords (Generate strong passwords)
# Use: openssl rand -base64 32
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=choose_strong_password_here
REDIS_PASSWORD=choose_strong_password_here
VAULT_ROOT_TOKEN=choose_strong_password_here

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
N8N_ENCRYPTION_KEY=generate_random_32_char_string
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=choose_admin_password

# -----------------------------------------------------------------------------
# Budget & Limits
# -----------------------------------------------------------------------------
BUDGET_LIMIT=100
TOKEN_WARNING_THRESHOLD=80
TOKEN_PAUSE_THRESHOLD=90
RATE_LIMIT_PER_MINUTE=50

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=choose_grafana_password
