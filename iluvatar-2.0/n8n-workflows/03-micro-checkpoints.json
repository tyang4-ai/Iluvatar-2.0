        "functionCode": "// Prepare Pippin Discord message\nconst fs = require('fs');\nconst systemPrompt = fs.readFileSync('/data/agents/06-pippin.md', 'utf8');\n\nconst checkpoint = $input.item.json;\n\n// Format message with payload data\nlet message = checkpoint.config.message_template;\nif (checkpoint.payload) {\n  Object.keys(checkpoint.payload).forEach(key => {\n    message = message.replace(`{${key}}`, checkpoint.payload[key]);\n  });\n}\n\nreturn {\n  json: {\n    agent: 'pippin',\n    systemPrompt: systemPrompt,\n    input: {\n      event_type: 'checkpoint',\n      checkpoint: checkpoint,\n      message: message,\n      buttons: checkpoint.config.requires_explicit_approval ? \n        ['‚úÖ Approve', '‚ùå Reject', 'üí¨ Provide Feedback'] : \n        ['‚úÖ Approve Now', '‚è∏Ô∏è Wait']\n    }\n  }\n};"
