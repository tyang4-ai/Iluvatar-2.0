# =============================================================================
# ILUVATAR 2.0 - HashiCorp Vault Configuration
# =============================================================================
# Secure secrets management for API keys, tokens, and passwords

# -----------------------------------------------------------------------------
# Storage Backend
# -----------------------------------------------------------------------------
storage "file" {
  path = "/vault/file"
}

# -----------------------------------------------------------------------------
# TCP Listener
# -----------------------------------------------------------------------------
listener "tcp" {
  address     = "0.0.0.0:8200"
  tls_disable = 1  # Disabled for development - enable in production
}

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
api_addr = "http://0.0.0.0:8200"
cluster_addr = "https://0.0.0.0:8201"

# -----------------------------------------------------------------------------
# UI
# -----------------------------------------------------------------------------
ui = true

# -----------------------------------------------------------------------------
# Lease Configuration
# -----------------------------------------------------------------------------
default_lease_ttl = "168h"  # 7 days
max_lease_ttl = "720h"      # 30 days

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
log_level = "info"
log_format = "json"
